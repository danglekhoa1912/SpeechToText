<Window x:Class="ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ui"
        mc:Ignorable="d"
        Title="khoaSpeechtoText" Height="450" Width="800">
    <Grid Background="#FFF0C1C1">
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Height="24" Margin="372,381,0,0" VerticalAlignment="Top" Width="29" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" IsEnabled="False" HorizontalAlignment="Left" Height="24" Margin="414,381,0,0" VerticalAlignment="Top" Width="29" Click="StopButton_OnClickopButton_Click"/>
        <Button x:Name="ClearButton" Content="Clear" IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="230,380,0,0" VerticalAlignment="Top" Width="32" Click="ClearButton_Click"/>
        <RadioButton x:Name="FromMic" Content="nhap tu mic" IsChecked="True" HorizontalAlignment="Left" Height="24" Margin="466,381,0,0" VerticalAlignment="Top" Width="97" Checked="FromMic_Checked"/>
        <RadioButton x:Name="FromFile" Content="nhap tu file" HorizontalAlignment="Left" Height="24" Margin="591,381,0,0" VerticalAlignment="Top" Width="101" Checked="FromFile_Checked_1"/>
        <ScrollViewer HorizontalAlignment="Left" Height="347" Margin="37,17,0,0" VerticalAlignment="Top" Width="716" Background="#FFD6F7C7">
            <TextBlock TextWrapping="Wrap" x:Name="DisplayText" FontSize="24" FontFamily="Times New Roman"></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
